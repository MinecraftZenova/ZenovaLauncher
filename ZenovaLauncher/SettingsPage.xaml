<Page x:Class="ZenovaLauncher.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZenovaLauncher"
      xmlns:control="clr-namespace:ZenovaLauncher.Controls"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="16,0,0,0" VerticalAlignment="Bottom" FontSize="15" FontWeight="SemiBold" Typography.Capitals="AllSmallCaps" Text="Settings" />
        <control:LauncherTabControl
            Grid.Row="1"
            Style="{StaticResource LauncherTabControl}"
            MinHeight="400">
            <TabItem Header="General">
                <TextBlock Text="General Settings" />
            </TabItem>
            <TabItem Header="About">
                <TextBlock Text="About Launcher" />
            </TabItem>
        </control:LauncherTabControl>
    </Grid>
</Page>